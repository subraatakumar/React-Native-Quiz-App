{
  "name": "quiz_app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "setStagingDebug": "ENVFILE=.env.staging.debug",
    "setStagingRelease": "ENVFILE=.env.staging.release",
    "setProdDebug": "ENVFILE=.env.prod.debug",
    "setProdRelease": "ENVFILE=.env.prod.release",
    "android:staging": "yarn setStagingDebug react-native run-android",
    "android:stagingRelease": "yarn setStagingRelease react-native run-android",
    "android:prod": "yarn setProdDebug react-native run-android",
    "android:prodRelease": "yarn setProdRelease react-native run-android",
    "generateStagingApk": "cp ./.env.staging.debug ./.env && cd android && ENVFILE=.env.staging.debug && ./gradlew assembleRelease",
    "generateStagingReleaseApk": "cp ./.env.staging.release ./.env && cd android && ENVFILE=.env.staging.release && ./gradlew assembleRelease",
    "generateProdApk": "cp ./.env.prod.debug ./.env && cd android && ENVFILE=.env.prod.debug && ./gradlew assembleRelease",
    "generateProdReleaseApk": "cp ./.env.prod.release ./.env && cd android && ENVFILE=.env.prod.release && ./gradlew assembleRelease",
    "android": "react-native run-android",
    "android:clean": "cd android && ./gradlew clean",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-native-firebase/app": "^19.2.2",
    "@react-native-firebase/auth": "^19.2.2",
    "@react-navigation/bottom-tabs": "^6.5.20",
    "@react-navigation/drawer": "^6.6.15",
    "@react-navigation/material-top-tabs": "^6.6.13",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "@reduxjs/toolkit": "^2.2.3",
    "expo": "^50.0.0",
    "react": "18.2.0",
    "react-native": "0.73.7",
    "react-native-config": "^1.5.1",
    "react-native-gesture-handler": "^2.16.0",
    "react-native-pager-view": "^6.3.0",
    "react-native-paper": "^5.12.3",
    "react-native-reanimated": "^3.8.1",
    "react-native-safe-area-context": "^4.9.0",
    "react-native-tab-view": "^3.5.2",
    "react-redux": "^9.1.1",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.73.21",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.5",
    "@react-native/typescript-config": "0.73.1",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
