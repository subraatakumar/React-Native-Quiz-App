{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@redux/*": ["./src/redux/*"],
      "@custom_hooks/*": ["./src/custom_hooks/*"],
      "@navigator/*": ["./src/navigator"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils"],
      "@helpers/*": ["./src/helpers"],
      "@/*": ["src/*"]
    }
  }
}
